<glossentry id="core-plus-store" role="CORE" xreflabel="+!">
  <glossterm>
    <indexterm role="forth"><primary>+!</primary></indexterm>
    <cmdsynopsis>
      <command>+!</command>
      <group role="stack">
        <arg>u</arg>
        <arg>a-addr</arg>
        <arg>--</arg>
      </group>
    </cmdsynopsis>
  </glossterm>
  <glossdef>
    <para>
      Increment the single cell contents of <parameter>a-addr</parameter>
      by <parameter>u</parameter>.
    </para>
    <example>
      <title>+!</title>
      <screen>
<userinput>10 (hld) +! (hld) ?<keysym>&larrhk;</keysym></userinput> 10  ok
      </screen>
    </example>
  </glossdef>
</glossentry>
