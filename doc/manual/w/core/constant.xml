<!DOCTYPE glossentry PUBLIC "-//OASIS//DTD DocBook XML V4.3//EN"
                  "http://www.oasis-open.org/docbook/xml/4.3/docbookx.dtd">
<glossentry id="core-constant" role="CORE" xreflabel="constant">
  <glossterm>
    <indexterm role="forth"><primary>constant</primary></indexterm>
    <cmdsynopsis>
      <command>constant</command>
      <group role="stack">
        <arg>x</arg>
        <arg>&ldquo;name&rdquo;</arg>
        <arg>--</arg>
      </group>
    </cmdsynopsis>
  </glossterm>
  <glossdef>
    <para>
      Create a single cell constant <parameter>name</parameter>
      with the value <parameter>x</parameter>.
    </para>
    <variablelist>
      <?dbfo list-presentation="blocks" ?>
      <?dbhtml list-presentation="table" ?>
      <varlistentry>
        <term><parameter>name</parameter> Execution</term>
        <listitem>
          <cmdsynopsis>
            <group role="stack">
              <arg>--</arg>
              <arg>x</arg>
            </group>
          </cmdsynopsis>
          <para>
            Push <parameter>x</parameter> on the stack.
          </para>
        </listitem>
      </varlistentry>
    </variablelist>
    <example>
      <title>constant</title>
      <screen>
<userinput>100 constant y<keysym>&larrhk;</keysym></userinput>  ok
<userinput>y .<keysym>&larrhk;</keysym></userinput> 100  ok
      </screen>
    </example>
  </glossdef>
</glossentry>
