<glossentry id="core-star-slash-mod" role="CORE" xreflabel="*/mod">
  <glossterm>
    <indexterm role="forth"><primary>*/mod</primary></indexterm>
    <cmdsynopsis>
      <command>*/mod</command>
      <group role="stack">
        <arg>n1</arg>
        <arg>n2</arg>
        <arg>n3</arg>
        <arg>--</arg>
        <arg>n4</arg>
        <arg>n5</arg>
      </group>
    </cmdsynopsis>
  </glossterm>
  <glossdef>
    <para>
      Multiply <parameter>n<subscript>1</subscript></parameter> by
      <parameter>n<subscript>2</subscript></parameter>, then divide
      the intermediate double cell product by
      <parameter>n<subscript>3</subscript></parameter>, returning
      the remainder <parameter>n<subscript>4</subscript></parameter> and
      quotient <parameter>n<subscript>5</subscript></parameter>.
    </para>
    <example>
      <title>*/mod</title>
      <screen>
<userinput>100 5 8 */mod . .<keysym>&larrhk;</keysym></userinput> 62 4  ok
      </screen>
    </example>
  </glossdef>
</glossentry>
