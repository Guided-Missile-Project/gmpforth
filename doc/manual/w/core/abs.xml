<glossentry id="core-abs" role="CORE" xreflabel="abs">
  <glossterm>
    <indexterm role="forth"><primary>abs</primary></indexterm>
    <cmdsynopsis>
      <command>abs</command>
      <group role="stack">
        <arg>n</arg>
        <arg>--</arg>
        <arg>u</arg>
      </group>
    </cmdsynopsis>
  </glossterm>
  <glossdef>
    <para>
      <parameter>u</parameter> is the absolute value of
      <parameter>n</parameter>.
    </para>
    <example>
      <title>abs</title>
      <screen>
<userinput>100 abs .<keysym>&larrhk;</keysym></userinput> 100  ok
<userinput>-100 abs .<keysym>&larrhk;</keysym></userinput> 100  ok
      </screen>
    </example>
  </glossdef>
</glossentry>
