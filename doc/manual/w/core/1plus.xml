<glossentry id="core-1plus" role="CORE" xreflabel="1+">
  <glossterm>
    <indexterm role="forth"><primary>1+</primary></indexterm>
    <cmdsynopsis>
      <command>1+</command>
      <group role="stack">
        <arg>n1</arg>
        <arg>--</arg>
        <arg>n2</arg>
      </group>
    </cmdsynopsis>
  </glossterm>
  <glossdef>
    <para>
      Add 1 to <parameter>n<subscript>1</subscript></parameter>
      returning <parameter>n<subscript>2</subscript></parameter>.
    </para>
    <example>
      <title>1+</title>
      <screen>
<userinput>100 1+ .<keysym>&larrhk;</keysym></userinput> 101  ok
<userinput>-100 1+ .<keysym>&larrhk;</keysym></userinput> -99  ok
      </screen>
    </example>
  </glossdef>
</glossentry>
